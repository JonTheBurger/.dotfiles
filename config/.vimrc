" https://vimhelp.org/options.txt.html
set relativenumber
set number
set nowrap

set hlsearch
set ignorecase
set smartcase

set shiftwidth=2
set expandtab
set tabstop=2

set clipboard=unnamedplus
set mouse=a
syntax on

""" Extra Vim Settings
" NERDtree like setup
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_browse_split = 4
let g:netrw_altv = 1
let g:netrw_winsize = 15
map <leader>t :Lexplore<CR>

