{
  "configurations": {
    "launch": {
      "adapter": "CodeLLDB",
      "variables": {
        "workspaceFolderBasename": {
          "shell": ["basename", "${PWD}"]
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/build/bin/${workspaceFolderBasename}"
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "Y",
          "cpp_catch": "N"
        }
      }
    }
  }
}
